@model AnimalEditViewModel
    <div class="container col-md-6 offset-3">
        <h4 class="text-center">Редагувати дані</h4>
<form method="post" asp-controller="Animal" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-2">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Birthday"></label>
        <input type="text" asp-for="Birthday" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="input-group mt-2">
        <input type="file" class="form-control" asp-for="Image" />
        <label class="input-group-text" asp-for="Image"></label>
    </div>


    <button class="btn btn-success btn-lg mt-1" type="submit">Змінити</button>
</form>
    </div>
@section Scripts {
        <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
        <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.uk.min.js"></script>
    <script>
        $("#Birthday").datepicker(
            {
                format: "dd.mm.yyyy",
                locale: "uk",
                language: "uk"
            });
    </script>
}
