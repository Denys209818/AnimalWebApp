@model List<AnimalViewModel>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <td scope="col">Номер</td>
            <td scope="col">Назва</td>
            <td scope="col">Дата народження</td>
            <td scope="col">Ціна</td>
            <td scope="col">Фотографія</td>
            <td scope="col">Інструменти</td>
        </tr>
    </thead>
    <tbody id="tbody">
        @foreach (var item in @Model)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Birthday.ToLongDateString()</td>
                <td>@item.Price</td>
                <td><img src="@item.Image" alt="img" width="100" /></td>
                <td>
                    <div class="container my-auto">
                        <p class="text-center my-auto">
                            <a asp-controller="Animal" asp-action="Edit" asp-route-id="@item.Id" asp-route-search="" class="text-decoration-none">
                                <i class="fa fa-pencil-square-o fa-2x text-primary"
                               data-id="@item.Id" aria-hidden="true"></i>
                            </a>
                            <i class="fa fa-trash-o fa-2x text-danger" 
                               data-id="@item.Id" data-delete aria-hidden="true"></i>
                        </p>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
<br />
<br />

<h4 class="text-center cursor-pointer">
    <a class="animalShow text-decoration-none"><i class="fa fa-spinner" aria-hidden="true"></i> Показати ще 2 записи</a>
</h4>
